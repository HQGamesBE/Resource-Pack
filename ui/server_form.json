    "hqgames_menu_grid": {
        "type": "grid",
        "size": [
            "100%",
            "100%c"
        ],
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "grid_item_template": "server_form.hqgames_button_size",
        "grid_rescaling_type": "horizontal",
        "collection_name": "form_buttons",
        "bindings": [
            {
                "binding_name": "#form_button_length",
                "binding_name_override": "#maximum_grid_items"
            }
        ]
    },
    "hqgames_button_size": {
        "type": "panel",
        "size": [
            90,
            90
        ],
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "controls": [
            {
                "hqgames_button": {
                    "type": "panel",
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "controls": [
                        {
                            "button@common.button": {
                                "anchor_from": "top_left",
                                "anchor_to": "top_left",
                                "layer": 2,
                                "$pressed_button_name": "button.form_button_click",
                                "controls": [
                                    {
                                        "default@server_form.hqgames_buttons": {
                                            "$button_texture": "textures/ui/hqgames/default_button"
                                        }
