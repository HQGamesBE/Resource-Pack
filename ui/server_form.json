{
    "namespace": "server_form",
    "third_party_server_screen@common.base_screen": {
        "$screen_content": "server_form.hqgames_main_content",
        "button_mappings": [
            {
                "from_button_id": "button.menu_cancel",
                "to_button_id": "button.menu_exit",
                "mapping_type": "global"
            }
        ]
    },
    "hqgames_main_content": {
        "type": "panel",
        "size": [
            "100%",
            "100%"
        ],
        "controls": [
            {
                "server_form_factory": {
                    "type": "factory",
                    "control_ids": {
                        "long_form": "@server_form.hqgamess_long_form",
                        "custom_form": "@server_form.custom_form"
                    }
                }
            }
        ]
    },
    "hqgamess_long_form": {
        "type": "panel",
        "$teleporter": "Teleporter",
        "$rules": "Rules",
        "size": [
            "100%",
            "100%"
        ],
        "controls": [
            {
                "long_form@long_form": {
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "(((#title_text - $teleporter) = #title_text)  and ((#title_text - $rules) = #title_text))",
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "hqgames_long_form@hqgames_long_form": {
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "(not((#title_text - $teleporter) = #title_text))",
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            }
        ]
    },
    "hqgames_long_form": {
        "type": "panel",
        "anchor_from": "center",
        "anchor_to": "center",
        "size": [
            390,
            "100% -60px"
        ],
        "offset": [
            0,
            0
        ],
        "orientation": "vertical",
        "controls": [
            {
                "title": {
                    "type": "panel",
                    "anchor_from": "top_right",
                    "anchor_to": "top_right",
                    "controls": [
                        {
                            "title_text": {
                                "layer": 5,
                                "type": "label",
                                "font_type": "MinecraftSeven", 
                                "text": "#title_text",
                                "text_alignment": "center",
                                "font_scale_factor": 0.5,
                                "anchor_from": "top_middle",
                                "anchor_to": "top_middle",
                                "offset": [
                                    0,  
                                    -17
                                ],
                                "shadow": false,
                                "bindings": [
                                    {
                                        "binding_name": "#title_text",
                                        "binding_type": "global"
                                    }
                                ]
                            }
                        },
                        {
                            "close_button@server_form.hqgames_close_button": {
                                "anchor_from": "top_right",
                                "anchor_to": "top_right",
                                "offset": [
                                    3,
                                    0
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "contents": {
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "layer": 2,
                    "type": "image",
                    "texture": "textures/ui/hqgames/background",
                    "keep_ratio": false,
                    "clips_children": true,
                    "allow_clipping": true,
                    "controls": [
                        {
                            "add_panel": {
                                "type": "stack_panel",
                                "orientation": "horizontal",
                                "offset": [
                                    -2,
                                    0
                                ],
                                "anchor_to": "center",
                                "anchor_from": "center",
                                "size": [
                                    "100% -30px",
                                    "100%"
                                ],
                                "controls": [
                                    {
                                        "hqgames_scroll_panel@hqgames_scroll_panel": {}
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "hqgames_scroll_panel": {
        "type": "image",
        "size": [
            "fill",
            "100%"
        ],
        "layer": 2,
        "controls": [
            {
                "hqgames_scroll_panel_pane@hqgames_scroll_panel_pane": {
                    "size": [
                        "100%", 
                        "100%"
                    ]
                }
            }
        ]
    },
    "hqgames_scroll_panel_pane@common.scrolling_panel": {
        "size": [
            "100%",
            "100%"
        ],
        "anchor_to": "center",
        "anchor_from": "center",
        "$show_background": false,
        "$scrolling_content": "server_form.hqgames_grid",
        "$scroll_size": [
